<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.berkeley.capstoneproject.capstoneprojectandroid.activities.DeviceActivity">

    <Button
        android:id="@+id/button_bluetooth_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Send"/>

    <EditText
        android:id="@+id/edit_bluetooth_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_bluetooth_send"/>

    <TextView
        android:id="@+id/text_bluetooth_received"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_bluetooth_send" />

</RelativeLayout>
