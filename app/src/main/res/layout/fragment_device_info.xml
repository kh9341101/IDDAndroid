<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <TextView
        android:id="@+id/fragment_device_info_textview_mac_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC: "/>

    <TextView
        android:id="@+id/fragment_device_info_textview_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_device_info_textview_mac_label"
        android:layout_alignTop="@id/fragment_device_info_textview_mac_label"/>

    <TextView
        android:id="@+id/fragment_device_info_textview_bonded_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_device_info_textview_mac_label"
        android:layout_marginTop="8dp"
        android:text="Bonded: "/>

    <TextView
        android:id="@+id/fragment_device_info_textview_bonded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fragment_device_info_textview_bonded_label"
        android:layout_below="@id/fragment_device_info_textview_mac"
        android:layout_toRightOf="@id/fragment_device_info_textview_bonded_label"/>

    <TextView
        android:id="@+id/fragment_device_info_textview_state_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_device_info_textview_bonded_label"
        android:layout_marginTop="8dp"
        android:text="State: "/>

    <TextView
        android:id="@+id/fragment_device_info_textview_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fragment_device_info_textview_state_label"
        android:layout_below="@id/fragment_device_info_textview_mac"
        android:layout_toRightOf="@id/fragment_device_info_textview_state_label"/>

</RelativeLayout>