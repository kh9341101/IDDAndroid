<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="edu.berkeley.capstoneproject.capstoneprojectandroid.activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_bluetooth_paired_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paired devices"/>

        <ListView
            android:id="@+id/list_bluetooth_paired_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_bluetooth_scanned_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned devices"/>

        <Button
            android:id="@+id/button_bluetooth_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Scan"/>

        <ListView
            android:id="@+id/list_bluetooth_scanned_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

</LinearLayout>
